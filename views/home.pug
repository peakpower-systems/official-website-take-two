            img(src='/img/PPSMAP.jpg', class="centerimage map-image")
    hr
    div(style = 'width: 100vw; margin: 0; background-color:#ffa742;')
        div(style = 'display: flex; justify-content : center; align-items : center; padding: 20px;', id="solutions", class="flex-container")
            div(style = 'display: flex; align-items: center;', class="flex-item")
